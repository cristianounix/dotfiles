spaceship_user() {
  [[ $SPACESHIP_USER_SHOW == never ]] && return

  if [[ $SPACESHIP_USER_SHOW == "always" ]] || [[ $LOGNAME != $USER ]] || [[ $UID == 0 ]] || [[ -n $SSH_CONNECTION ]]; then
    local user_color

    if [[ $USER == 'root' ]]; then
      user_color=$SPACESHIP_USER_COLOR_ROOT
    else
      user_color="$SPACESHIP_USER_COLOR"
    fi

    _prompt_section \
      "$user_color" \
      "$SPACESHIP_USER_PREFIX" \
      '%n' \
      "$SPACESHIP_USER_SUFFIX"
  fi
}

spaceship_host() {
  [[ $SPACESHIP_HOST_SHOW == "never" ]] && return

  if [[ $SPACESHIP_HOST_SHOW == "always" ]] || [[ -n $$SSH_CONNECTION ]]; then
    local host_color

    if [[ -n $SSH_CONNECTION ]]; then
      host_color=$SPACESHIP_HOST_SSH_COLOR
    else
      host_color=$SPACESHIP_HOST_COLOR
    fi

    _prompt_section \
      "$host_color" \
      "$SPACESHIP_HOST_PREFIX" \
      '%m' \
      "$SPACESHIP_HOST_SUFFIX"
  fi
}


SPACESHIP_PROMPT_ORDER=(
  time
  user
  host
  dir
  git
  node
  ruby
  xcode
  venv
  pyenv
  exit_code
  char
)
 
